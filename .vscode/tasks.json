{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "sh",
    "args": ["-c"],
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
    },
    "options": {
        "cwd": "${workspaceRoot}/build"
    },
    "tasks": [
        {
            "taskName": "cmake",
            "type": "shell",
            "command": "/Applications/CMake.app/Contents/bin/cmake ../src -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug",
            "problemMatcher": []
        },
        {
            "taskName": "make",
            "type": "shell",
            "command": "make -j 8",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": "^/\\[0m([^:]*):(\\d+):(\\d+):\\s+(warning|error|note):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "taskName": "clean",
            "type": "shell",
            "command": "make -j 8 clean",
            "problemMatcher": []
        }
    ]
}